{
  "name": "@berslucas/liljs",
  "version": "1.0.1",
  "description": "A micro-framework for Javascript data-binding.",
  "main": "dist/lil.js",
  "repository": "https://github.com/bersLucas/liljs",
  "keywords": [
    "framework",
    "one-way binding",
    "lil",
    "micro-framework",
    "MVW"
  ],
  "bugs": "https://github.com/bersLucas/liljs/issues",
  "author": "bersLucas <contact@lucasbersier.com>",
  "browserslist": "> 0.25%, not dead",
  "license": "MIT",
  "private": false,
  "scripts": {
    "babel": "npx babel src --out-dir dist  --presets=@babel/preset-env",
    "minify": "uglifyjs dist/liljs.js -o dist/liljs.min.js --source-map",
    "docs": "jsdoc src/liljs.js -d docs",
    "default": "yarn run babel && yarn run minify && yarn run docs",
    "test": "karma start karma.conf.js --log-level debug --single-run"
  },
  "dependencies": {
    "global": "^4.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "jsdoc": "^3.5.5",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^2.0.0",
    "karma-jasmine": "^2.0.1",
    "uglify-js": "^3.4.9"
  }
}
